@{
    ViewData["Title"] = "Home Page";
}
<div class="page-wrapper">
    <form asp-controller="Home" asp-action="RunGA" method="post">
        <label>Population Size</label>
        <input name="PopulationSize" type="number" min="10" max="100" required />

        <label>Max Generations</label>
        <input name="MaxGenerations" type="number" min="10" max="200" required />

        <label>Crossover Rate (0.0 - 1.0)</label>
        <input name="CrossoverRate" type="number" step="0.01" min="0" max="1" required />

        <label>Mutation Rate (0.0 - 1.0)</label>
        <input name="MutationRate" type="number" step="0.01" min="0" max="1" required />

        <button type="submit"> GA Başlat </button>
    </form>
</div>

